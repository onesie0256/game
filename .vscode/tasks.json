{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc アクティブなファイルのビルド",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${fileDirname}/**/*.c",
                "${fileDirname}/**/**/*.c",
                "-o",
                "${fileDirname}/game",
                "-I/usr/include/SDL2",
                "-lSDL",
                "-L/usr/lib",
                "-lSDL_gfx",
                "-lSDL_ttf",
                "-lSDL_mixer"

            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "デバッガーによって生成されたタスク。"
        }
    ],
    "version": "2.0.0"
}